#!/usr/bin/make -f

%:
	dh $@ --with python3

export DEB_BUILD_MAINT_OPTIONS=hardening=-stackprotector

ARCH = $(shell dpkg-architecture -qDEB_HOST_ARCH)

override_dh_auto_build:
	${MAKE} -C server
	${MAKE} -C util

override_dh_auto_install:
	dh_auto_install

override_dh_auto_clean:
	dh_auto_clean
	rm -f *.pyc *.pyo
	rm -rf firmware/build-*
	$(MAKE) -C server clean
	$(MAKE) -C util clean
